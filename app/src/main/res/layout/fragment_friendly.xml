<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".java.fragment.FriendlyFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_fragment"
            android:layout_width="360dp"
            android:layout_height="480dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_fragment_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_fragment"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/tv_fragment_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fragment_username"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/tv_fragment_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fragment_age"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>
</ScrollView>